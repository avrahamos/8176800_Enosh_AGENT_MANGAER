@model IEnumerable<AgentMvc.Models.MissionModel>
@{
    ViewData["Title"] = "Missions";
}

<h1>Missions</h1>

<form asp-action="UpdateMissions" method="post">
    <button type="submit" class="btn btn-secondary mb-3">Update Missions</button>
</form>

<h3>Proposed Missions</h3>
<table class="table">
    <thead>
        <tr>
            <th>Agent</th>
            <th>Target</th>
            <th>Time Remaining</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(m => m.StatusMission == AgentMvc.Models.MissionStatus.Proposed))
        {
            <tr>
                <td>@item.AgentID</td>
                <td>@item.TargetId</td>
                <td>@item.TimeRemaining</td>
                <td>
                    <a asp-action="Assign" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Assign</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Active Missions</h3>
<table class="table">
    <thead>
        <tr>
            <th>Agent</th>
            <th>Target</th>
            <th>Time Remaining</th>
            <th>Actual Execution Time</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(m => m.StatusMission != AgentMvc.Models.MissionStatus.Proposed))
        {
            <tr>
                <td>@item.AgentID</td>
                <td>@item.TargetId</td>
                <td>@item.TimeRemaining</td>
                <td>@item.ActualExecutionTime</td>
                <td>@item.StatusMission</td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>No missions available.</p>
}